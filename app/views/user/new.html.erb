<h1>Rejestracja</h1>


<% if @save %>
  <% if @save.errors %>
    <ul>
      <% @save.errors.full_messages.each do |err| %>
        <li>
          <%= err %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= form_for "user", :url => { :action => "new" } do |f| %>

  <%= f.label "Login" %><br>
  <%= f.text_field "login" %><br>

  <%= f.label "Hasło" %><br>
  <%= f.password_field  "password" %><br>

  <%= f.label "Imię" %><br>
  <%= f.text_field "first_name" %><br>

  <%= f.label "Nazwisko" %><br>
  <%= f.text_field  "last_name" %><br>

  <%= f.label "Numer pesel" %><br>
  <%= f.text_field  "pesel" %><br>

  <%= f.submit "Załóż konto" %>
  <p><a href="/user/login">Masz już konto? Zaloguj się!</a></p>

<% end %>
