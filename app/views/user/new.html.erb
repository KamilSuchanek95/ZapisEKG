<h1>Rejestracja</h1>


<% if @save %>
  <% if @save.errors %>
    <ul>
      <% @save.errors.full_messages.each do |err| %>
        <li>
          <%= err %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= form_for "user", :url => { :action => "new" } do |f| %>

  <%= f.label "login" %><br>
  <%= f.text_field "login" %><br>

  <%= f.label "password" %><br>
  <%= f.password_field "password" %><br>

  <%= f.label "first_name" %><br>
  <%= f.text_field "first_name" %><br>

  <%= f.label "last_name" %><br>
  <%= f.text_field "last_name" %><br>

  <%= f.label "pesel" %><br>
  <%= f.text_field "pesel" %><br>

  <%= f.submit %>
  <p><a href="/user/login">Masz ju≈º konto? Zaloguj!</a></p>

<% end %>